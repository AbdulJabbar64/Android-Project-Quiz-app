<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.app.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/quiz1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/quiz1"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp">
        <activity android:name=".about.about"></activity>
        <activity android:name=".Login_Activity" />
        <activity android:name=".admin.Admin_Login" />
        <activity android:name=".activities.QuizActivity" />
        <activity android:name=".activities.AddQuestion" />
        <activity android:name=".MainActivity" />
        <activity android:name=".admin.AddNewCategory" />

        <activity android:name=".user.UserQuiz"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".activities.intro_screens.FirstActivity"
            tools:ignore="DuplicateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>